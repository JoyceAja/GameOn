import React, { Component } from "react";
import axios from "axios";
import './leaderboard.css'
import {
    ListGroup,
    ListGroupItem,
} from 'react-bootstrap'


class Leaderboard extends Component {
  state = {
    players: []
  };

  getAllPlayers = () => {
    axios
      .get("/user/all")
      .then(res => {
        this.setState({
          players: res.data.data
        });
      })
      .catch(err => console.log("Error Fetching Players:", err));
  };

  componentWillMount() {
    this.getAllPlayers();
  }
  render() {
    const { players } = this.state;
    console.log("Leaderboard:", players)
    return (
      <div id="leaderboard_parent">
        <span>LEADERBOARD</span>
        {/* <ListGroup id="leaderboard_container">
          <ListGroupItem id="leaderboard_header">
            <span>Player</span>
            <span>Medal</span>
                        <span>Rank</span>
            <span>Score</span>
            <span>Wins</span>
                        <span>Losses</span>   
          </ListGroupItem>
        </ListGroup> */}
          <ListGroup id="leaderboard_container">
          {players.map(p => {
            <ListGroupItem bsClass="leaderboard-individual-player">
              test
            </ListGroupItem>
          })}
          </ListGroup>
      </div>
    );
  }
}

export default Leaderboard;

